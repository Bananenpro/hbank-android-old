<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HBank" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/background</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorOnPrimary">@color/foreground</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/blue</item>
        <item name="colorOnSecondary">@color/foreground</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryDark</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/background</item>
        <item name="android:actionBarItemBackground">@color/background</item>
        <item name="android:textColor">@color/foreground</item>
        <item name="actionBarStyle">@style/Theme.HBank.ActionBar</item>
    </style>


    <style name="Theme.HBank.ActionBar"
        parent="Theme.HBank">
        <item name="background">@color/background</item>
        <item name="displayOptions">showTitle</item>
    </style>
</resources>